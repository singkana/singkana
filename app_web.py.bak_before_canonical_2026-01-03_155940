# SingKANA Webアプリ本体（Flask）
# Canonical Version – 2026-01-03

from __future__ import annotations

import os
import json
import datetime
import traceback
import re
from pathlib import Path
import urllib.request
import urllib.error

from flask import (
    Flask,
    request,
    jsonify,
    send_from_directory,
    Response,
    current_app,
)

# ===== 基本設定 =========================================================

BASE_DIR = Path(__file__).resolve().parent
APP_NAME = "SingKANA"

# .env 読み込み（あれば）
try:
    from dotenv import load_dotenv  # type: ignore
except Exception:
    load_dotenv = None

if load_dotenv:
    load_dotenv(BASE_DIR / ".env")

# エンジン
import singkana_engine as engine

app = Flask(__name__)

# ======================================================================
# API: 歌詞変換（Canonical / 唯一）
# ======================================================================

@app.post("/api/convert")
def api_convert():
    data = request.get_json(silent=True) or {}

    lyrics = (
        data.get("text")
        or data.get("lyrics")
        or ""
    )
    if not lyrics:
        return jsonify({"ok": False, "error": "empty_lyrics"}), 400

    meta = data.get("meta") if isinstance(data.get("meta"), dict) else {}
    display_mode = str(meta.get("display_mode") or "basic").lower()

    # ===== 課金ゲート（Basicのみ無料） =====
    if display_mode != "basic":
        return jsonify({
            "ok": False,
            "error": "payment_required",
            "message": "This mode is available on Pro plan.",
            "requested_mode": display_mode,
            "allowed_free_modes": ["basic"],
            "required_plan": "pro",
        }), 402

    # ===== 変換実行 =====
    try:
        if hasattr(engine, "convertLyrics"):
            result = engine.convertLyrics(lyrics)
        elif hasattr(engine, "convert_lyrics"):
            result = engine.convert_lyrics(lyrics)
        else:
            # フォールバック
            result = [{"en": lyrics, "kana": lyrics}]
    except Exception as e:
        traceback.print_exc()
        return jsonify({
            "ok": False,
            "error": "engine_error",
            "detail": str(e),
        }), 500

    return jsonify({
        "ok": True,
        "result": result,
    })


# ======================================================================
# 静的ファイル / 画面
# ======================================================================

@app.get("/")
def index() -> Response:
    return send_from_directory(str(BASE_DIR), "index.html")


@app.get("/singkana_core.js")
def singkana_core_js() -> Response:
    resp = send_from_directory(
        str(BASE_DIR),
        "singkana_core.js",
        mimetype="application/javascript; charset=utf-8",
    )
    resp.headers["Content-Type"] = "application/javascript; charset=utf-8"
    return resp


@app.get("/paywall_gate.js")
def serve_paywall_gate_js():
    return send_from_directory(str(BASE_DIR), "paywall_gate.js")


# ======================================================================
# Health Check
# ======================================================================

@app.get("/healthz")
def healthz():
    return jsonify({
        "ok": True,
        "service": APP_NAME,
        "time": datetime.datetime.utcnow().isoformat() + "Z",
    })
